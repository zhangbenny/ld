// =======================================
// Modify bootstrap presets 
// =======================================
.navbar
  border 0px
  margin-bottom 0px

.container
  padding 0px
  
.navbar-toggle
  border 0px

.navbar-toggle .icon-bar
  height 4px  
  border-radius 2px
  
.navbar-default .navbar-toggle .icon-bar
  background-color #4d4d4d

h6
  margin-top 7px
  margin-bottom 4px

// =======================================
// Custom 
// =======================================

#root
  display grid

.NavbarTop
  width 100%
  height 60px
  background-color #efefef
  -webkit-box-shadow 0px 0px 8px 2px #000000
     -moz-box-shadow 0px 0px 8px 2px #000000
          box-shadow 0px 0px 8px 2px #000000

.brand-logo
  width 35px
  height 40px
  margin 8px 0px 0px 12px

.brand-container
  width 60px
  height 60px
  padding 0px
  background-color red // or #ed0052

// =======================================
// IndexPage 
// =======================================
.IndexPage
  margin-top 60px
  display flex
  justify-content flex-start

// =======================================
// TabList 
// =======================================
.TabList
  width 340px
  height 100%
  background-color #f1f1f2
  
.Tab
  width 340px
  height 90px
  padding 0px 10px 12px 10px
  border 1px solid #e1e1e2
  overflow-wrap break-word
  overflow hidden
  text-overflow ellipsis
  p
    width 320px
    height 62px
    font-size 11px
    overflow hidden
    text-overflow ellipsis

// =======================================
// NavbarLeft 
// =======================================
.NavbarLeft-container
  width 60px
  height 100%

.NavbarLeft
  position fixed
  background-color #333333
  width 60px
  height 100%

.square-button
  margin-top 12px
  margin-left 10px
  width 40px
  height 42px
  padding 0px

.square-button-text
  margin-left 18px
  font-size 12px
  color white

.command-symbol
  font-size 8px
  vertical-align middle 
