body
  overflow hidden

// =======================================
// Modify bootstrap presets 
// =======================================
.navbar
  border 0px
  margin-bottom 0px

.container
  padding 0px
  
h6
  margin-top 7px
  margin-bottom 4px

// =======================================
// Custom 
// =======================================

.NavbarTop
  display flex
  justify-content flex-start
  width 100%
  height 60px
  background-color #efefef
  -webkit-box-shadow 0px 0px 8px 2px #000000
     -moz-box-shadow 0px 0px 8px 2px #000000
          box-shadow 0px 0px 8px 2px #000000

.brand-logo
  width 35px
  height 40px
  margin 8px 0px 0px 12px

.brand-container
  width 60px
  height 60px
  padding 0px
  background-color red // or #ed0052
  
.page-title
  margin 20px 15px
  font-family "Helvetica-Light"
  font-size 22px
  color #747474
    
.dropdown-icon
  width 44px
  height 34px
  position fixed
  top 5px
  right 0px
  display flex
  justify-content space-between
  flex-direction column
  padding 7px 8px
  margin-top 8px
  margin-right 15px
  margin-bottom 8px
  background-color transparent
  background-image none
  border 1px solid transparent
  border-radius 4px

.dropdown-icon .icon-bar
  width 22px
  height 4px
  background-color #4d4d4d
  border-radius 3px

// =======================================
// IndexPage 
// =======================================
.IndexPage
  margin-top 60px
  
.tablist-detail
  margin-left 60px
  display flex

// =======================================
// NavbarLeft 
// =======================================
.NavbarLeft-container
  width 60px
  height 100%

.NavbarLeft
  position fixed
  background-color #333333
  width 60px
  height 100%

.square-button
  margin-top 12px
  margin-left 10px
  width 40px
  height 42px
  padding 0px

.square-button-text
  margin-left 18px
  font-size 12px
  color white

.command-symbol
  font-size 8px
  vertical-align middle 

.Details-container
  width 100%
  height 100vh
  background-color #f7f7f7
  position relative

.Details
  display flex
  flex-direction column
  flex-wrap wrap
  align-content flex-start
  padding 15px 25px

.detail-title
  float left
  font-size 16px

.detail-subtitle
  float left
  font-size 14px
  font-style italic
  margin-top 0px
  
.divider
  margin 10px 0px
  width 100%
  height 2px
  background-color #ededed

.paragraph
  padding 3px 0px
  font-size 11px

.drop-cap
  font-size 35px
  float left 
  line-height 25px
  padding-top 3px 
  padding-right 3px

.captioned-img
  align-self center
  text-align center
  margin 14px

.gray-box
  width 500px
  height 200px
  background-color gray
  align-self center
  
.caption
  font-size 10px
  font-style italic
  align-self center

// =======================================
// TabList 
// =======================================
.TabList-container
  width 450px
  height 100vh

.TabList
  position absolute
  height 100%
  background-color #f1f1f2
  overflow-y scroll

.Tab
  width 350px
  height 90px
  padding 0px 10px 12px 10px
  border 1px solid #e1e1e2
  overflow-wrap break-word
  overflow visible
  p
    width 320px
    height 62px
    font-size 11px
    overflow hidden
    text-overflow ellipsis

// =======================================
// MessageBar 
// =======================================
.MessageBar
  width 100%
  height 80px
  padding 20px
  border-top 2px solid #ededed
  background-color #f7f7f7
  position absolute
  bottom 60px

.form-control
  width 100%
  height 40px
  background-color #f7f7f7
  border-color #ededed
  font-family Helvetica-Light
  font-size 16px
  padding-left 15px
  color #aaaaaa
